# ========================================
# CONFIGURACIÓN DE SEGURIDAD - CRÍTICO
# ========================================

# JWT Secret - CAMBIAR EN PRODUCCIÓN
JWT_SECRET=tu-super-secret-jwt-muy-seguro-y-largo

# Firebase Configuration
FIREBASE_CREDENTIALS=firebase-credentials.json

# ========================================
# CONFIGURACIÓN DEL SERVIDOR
# ========================================

# Puerto del servidor
PORT=10000

# Entorno
NODE_ENV=development

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================

# Firebase Project ID
FIREBASE_PROJECT_ID=tu-proyecto-firebase

# ========================================
# CONFIGURACIÓN DE AWS S3 (IDriveE2)
# ========================================

AWS_ACCESS_KEY_ID=tu-access-key
AWS_SECRET_ACCESS_KEY=tu-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=tu-bucket-name

# ========================================
# CONFIGURACIÓN DE EMAIL
# ========================================

# Nodemailer Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-app-password

# ========================================
# CONFIGURACIÓN DE PAGOS
# ========================================

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# PayPal
PAYPAL_CLIENT_ID=tu-paypal-client-id
PAYPAL_CLIENT_SECRET=tu-paypal-secret

# ========================================
# CONFIGURACIÓN DE REDIS (CACHÉ)
# ========================================

REDIS_URL=redis://localhost:6379

# ========================================
# CONFIGURACIÓN DE GOOGLE OAUTH
# ========================================

GOOGLE_CLIENT_ID=tu-google-client-id
GOOGLE_CLIENT_SECRET=tu-google-client-secret

# ========================================
# CONFIGURACIÓN DE FIREBASE CLOUD MESSAGING
# ========================================

FCM_SERVER_KEY=tu-fcm-server-key

# ========================================
# CONFIGURACIÓN DE CORS
# ========================================

# URLs permitidas para CORS (separadas por coma)
ALLOWED_ORIGINS=https://mussikon.web.app,https://mussikon.firebaseapp.com

# ========================================
# CONFIGURACIÓN DE RATE LIMITING
# ========================================

# Límite de requests por IP (por ventana de tiempo)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================

# Nivel de logging
LOG_LEVEL=info

# ========================================
# CONFIGURACIÓN DE MONITOREO
# ========================================

# Sentry DSN (opcional)
SENTRY_DSN=tu-sentry-dsn

# ========================================
# INSTRUCCIONES
# ========================================

# 1. Copia este archivo como .env
# 2. Completa todas las variables con tus valores reales
# 3. NUNCA subas el archivo .env al repositorio
# 4. En producción, usa variables de entorno del servidor
# 5. Cambia JWT_SECRET por un valor seguro y único 